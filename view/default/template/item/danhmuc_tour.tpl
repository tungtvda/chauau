    <div class="themeum-latest-post"><a class="review-item-image"
                                        href="{link}"><img
                    width="570" height="400"
                    src="{img}"
                    class="img-responsive wp-post-image" alt="848234"></a>
        <div class="themeum-latest-post-content clearfix"><h3 class="entry-title"><a
                        href="{link}"> {name}</a></h3><span
                    class="meta-date">{durations}</span><span class="latest-post-comments">
                <a
                        href="{link}">{price_format} {vnd}</a></span>

        </div>
        <p class="short_content">
            {content}
        </p>
        <div class="themeum-latest-post-content clearfix item_bottom">
                                <span class="meta-date">
                                    <a class="detail_button hover_left" href="{link}"><i class="fa fa-eye-slash"></i> Chi tiết</a>
                                </span>
                                <span class="latest-post">
                                    <a class="detail_button hover_right" href="{link}#booking"><i class="fa fa-cart-plus"></i> Đặt tour</a>
                                </span>

