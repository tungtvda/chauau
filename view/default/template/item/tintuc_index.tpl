<div class="col-xs-12 col-sm-6 col-md-3">
    <div class="themeum-latest-post"><a class="review-item-image"
                                        href="{link}"><img
                    width="570" height="400" title="{name}"
                    src="{img}"
                    class="img-responsive wp-post-image" alt="{name}"/></a>
        <div style="padding: 10px" class="themeum-latest-post-content clearfix"><h3
                    class="entry-title"><a title="{name}"
                        href="{link}">{name}</a></h3><span class="meta-date">{created}</span><span
                    class="latest-post-comments"><i
                        class="fa fa-eye"></i> <a
                        href="{link}">{view}</a></span>
        </div>
    </div>
</div>